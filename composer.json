{
  "name": "hhpack/service-locator",
  "keywords": [ "lightweight", "service locator", "hack", "container", "service", "registry" ],
  "description": "Lightweight service locator for Hack",
  "authors": [
    {
      "name": "Noritaka Horio",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "license": "MIT",
  "require": {
    "hhvm": ">= 3.18.0",
    "hhpack/package": "^1.1"
  },
  "require-dev": {
    "hackpack/hackunit": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "HHPack\\Service\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HHPack\\Service\\Example\\": "example",
      "HHPack\\Service\\Test\\Fixtures\\": "test/fixtures"
    }
  },
  "scripts": {
    "test": "vendor/bin/hackunit test",
    "check": "./typecheck",
    "example": "hhvm ./example/environment.hh"
  },
  "minimum-stability": "stable"
}
